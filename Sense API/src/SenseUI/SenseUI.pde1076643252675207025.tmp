
PImage logo;
int logoS = 200;
PFont p1, p2, mbFont;

void setup() {
  frameRate(30);
  size(1000, 1000);
  background(bgColor);
  noStroke();

  p1 = createFont("Arial", 20); 
  mbFont = createFont("Arial", 12);

  mainPanel = new MainPanel(this);
}


void draw() {
  drawUI();
}

void drawUI() {
  mainPanel.draw();
}

void startRecording() {
  RECORDING = true;
  fileOutput.print("#");
  for (int i = 1; i < numAFEs+1; i++) {
    for (int j = 1; j < numChannels+1; j++) {
      fileOutput.print("AFE" + str(i) + "_" + str(j) + "\t");
    }
  }
  fileOutput.println();
}

void stopRecording() {
  fileOutput.flush();
  fileOutput.close();
  RECORDING = false;
}