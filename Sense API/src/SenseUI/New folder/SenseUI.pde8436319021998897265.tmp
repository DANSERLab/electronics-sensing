PImage logo;
int logoS = 200;
PFont p1, p2, mbFont;

public void setup() {
  frameRate(60);
  size(1000, 1000);
  background(bgColor);
  noStroke();
  noLoop();

  p1 = createFont("Arial", 20); 
  mbFont = createFont("Arial", 12);

  mainPanel = new MainPanel(this);
}

void draw() {
   mainPanel.draw();
}

void startRecording() {
  println(filePath);
  if (filePath == null) {
    println("Make sure to set a file output!");
    selectOutput("Select a file to write to:", "fileSelected");
  }
  RECORDING = true;
  fileOutput.print("#" + " t ");
  for (int i = 1; i < numAFEs+1; i++) {
    for (int j = 1; j < numChannels+1; j++) {
      fileOutput.print("AFE" + str(i) + "_" + str(j) + "\t");
    }
  }
  fileOutput.println();
}

void stopRecording() {
  fileOutput.flush();
  fileOutput.close();
  RECORDING = false;
}